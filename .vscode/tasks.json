{
    "version": "2.0.0",
    "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
    },
    "problemMatcher": [],
    "tasks": [
        {
            "label": "LeetCode: Generate Contest Template",
            "type": "shell",
            "command": "./scripts/genc.sh",
            "windows": {
                "command": ".\\scripts\\genc.cmd"
            },
            "args": ["${input:contest_name}"]
        },
        {
            "label": "LeetCode: Generate Problem Template",
            "type": "shell",
            "command": "./scripts/genp.sh",
            "windows": {
                "command": ".\\scripts\\genp.cmd"
            },
            "args": ["${input:problem_name}"]
        }
    ],
    "inputs": [
        {
            "id": "contest_name",
            "type": "promptString",
            "description": "Enter LeetCode contest name:"
        },
        {
            "id": "problem_name",
            "type": "promptString",
            "description": "Enter LeetCode problem name:"
        }
    ]
}
